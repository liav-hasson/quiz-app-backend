# Flask
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# MongoDB (shared with main backend)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123

# Auth (shared JWT secret with main backend)
REQUIRE_AUTHENTICATION=true
JWT_SECRET=local-secret
JWT_EXP_DAYS=7

# Redis (for WebSocket scaling)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# WebSocket
WEBSOCKET_CORS_ORIGINS=*
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# Lobby Settings
MAX_PLAYERS_PER_LOBBY=10
DEFAULT_QUESTION_TIMER=30
LOBBY_CODE_LENGTH=6
# Minimum players to start a game (default: 1 for solo practice, set to 2+ for multiplayer-only)
MIN_PLAYERS_TO_START=1

# Game Settings
GAME_COUNTDOWN_DURATION=5
QUESTION_INTERVAL_DURATION=3
LOBBY_EXPIRY_HOURS=1

# =============================================================================
# OpenAI Configuration (Optional - for AI-generated questions in multiplayer)
# =============================================================================
# Leave empty to use database questions only (no AI generation)
# Get an API key at: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_TEMPERATURE_QUESTION=0.7
# OPENAI_TEMPERATURE_EVAL=0.5
# OPENAI_MAX_TOKENS_QUESTION=200
# OPENAI_MAX_TOKENS_EVAL=300

# AWS (prod only)
AWS_REGION=eu-north-1
